/dts-v1/;
/plugin/;

 / {
     fragment@0 {
         target = <&i2c1>; 

         __overlay__ {
             #address-cells = <1>;
             #size-cells = <0>;

             mcp23017@27 {
                 compatible = "waveshare,mcp23017";
                 reg = <0x27>;  // Address of the I2C expander
                 gpio-controller;
                 #gpio-cells = <2>;
                 interrupt-parent = <&gpio>;  
                 interrupts = <17 2>;  
             };
         };
     };
 };